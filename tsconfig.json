{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "noImplicitAny": false,
    "paths": {
      "@environment/*": ["./src/environment/*"],
      "@commands/*": ["./src/commands/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
